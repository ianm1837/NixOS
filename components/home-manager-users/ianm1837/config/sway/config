# In Sway, `exec` and `exec_always` are used to run commands at startup.
exec dbus-update-activation-environment WAYLAND_DISPLAY
exec echo 1 > /sys/class/leds/tpacpi::kbd_backlight/brightness
exec kanshi & waypaper --restore & nm-applet --indicator & blueman-applet & swaymsg cursor set Bibata-Modern-Classic 24 &
exec_always kanshictl reload
exec_always pkill waybar
exec_always waybar
exec ~/.config/hypr/scripts/watch-socket.sh &
exec /usr/lib/polkit-kde-authentication-agent-1
exec swayidle -w timeout 300 'swaylock && swaymsg "output * dpms off"' timeout 600 'systemctl suspend' resume 'swaymsg "output * dpms on"' before-sleep 'killall -s SIGUSR1 swaylock'
# Startup delay script
exec ~/.config/hypr/scripts/startup-delay.sh


# Clipboard management with wl-clipboard
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store

# Environment variables
set $XCURSOR_SIZE 24
set $mod Mod4


# window options

# remove window titlebars
# default_border none
# default_floating_border none
# font pango:monospace 0
# titlebar_padding 1
# titlebar_border_thickness 0

corner_radius 10


# Keyboard configuration
input * xkb_layout us
# To set options, rules, or variants, use `xkb_options`, `xkb_rules`, or `xkb_variant`.
input * xkb_options caps:escape

# Touchpad configuration
input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    scroll_factor 0.25
}

bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next

floating_modifier $mod normal

# floating_modifier: normal
# tiling_drag: enable

input type:pointer {
    accel_profile flat
    natural_scroll disabled
    pointer_accel -0.1
}

# Mouse configuration does not directly map, but sensitivity and accel can be adjusted in Sway.
# Modifiers and program launch
bindsym $mod+T exec kitty
bindsym $mod+B exec brave --enable-features=TouchpadOverscrollHistoryNavigation
bindsym $mod+C exec code --enable-features=UseOzonePlatform --ozone-platform=wayland
bindsym $mod+Q kill
bindsym $mod+F4 exec wlogout
bindsym $mod+F toggle floating
bindsym $mod+Space exec rofi -show drun
bindsym $mod+n exec ~/.config/sway/swayspace new

bindsym $mod+shift+c reload

# Workspace and window management
bindsym $mod+h workspace prev
bindsym $mod+l workspace next
# Sway does not have a direct equivalent for moving workspaces to monitors; use specific workspace naming or focus commands.

# Audio and backlight controls
bindsym XF86MonBrightnessUp exec backlight_control +10
bindsym XF86MonBrightnessDown exec backlight_control -10
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%

# Gaps, borders, and general appearance settings
gaps inner 10
gaps outer 10
# Sway does not support per-window border colors directly through the config. You might need external tools or scripts.

# For animations and other Hyprland-specific features, Sway does not have built-in support. External tools or patches like sway-anime might be required for similar effects.


