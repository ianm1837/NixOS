# variables
    set $XCURSOR_SIZE 24
    set $mod Mod4




# Keyboard configuration
    input * xkb_layout us

    
    #set caps lock as escape
    input * xkb_options caps:escape
    input type:keyboard {
      repeat_delay 250
      repeat_rate 50
      xkb_numlock enabled
    }

# Touchpad configuration
    input type:touchpad {
        dwt enabled
        tap enabled
        natural_scroll enabled
        scroll_factor 0.25
    }

floating_modifier $mod normal

# floating_modifier: normal
# tiling_drag: enable

input type:pointer {
    accel_profile flat
    natural_scroll disabled
    pointer_accel -0.1
}

# Mouse configuration does not directly map, but sensitivity and accel can be adjusted in Sway.
# Modifiers and program launch
bindsym $mod+T exec kitty
bindsym $mod+B exec brave --enable-features=TouchpadOverscrollHistoryNavigation
bindsym $mod+C exec code --enable-features=UseOzonePlatform --ozone-platform=wayland
bindsym $mod+Q kill
bindsym $mod+F4 exec wlogout
bindsym $mod+F toggle floating
bindsym $mod+V exec kitty -e nvim ~
bindsym $mod+Space exec rofi -show drun

# workspace management
bindsym $mod+n exec ~/.config/sway/swayspace new
bindsym $mod+shift+n exec ~/.config/sway/swayspace movetonew

bindsym $mod+shift+h move container workspace prev_on_output; workspace prev_on_output
bindsym $mod+shift+l move container workspace next_on_output; workspace next_on_output

bindsym $mod+h workspace prev_on_output
bindsym $mod+l workspace next_on_output
bindgesture swipe:right workspace prev_on_output
bindgesture swipe:left workspace next_on_output


bindsym $mod+shift+c reload


# Audio and backlight controls
bindsym XF86MonBrightnessUp exec xbacklight -ctrl amdgpu_bl0 -fps 60 -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -ctrl amdgpu_bl0 -fps 60 -dec 10
bindsym XF86AudioRaiseVolume exec wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%-

gaps inner 10
gaps outer 10



